<h1>Listing submissions</h1>
<h5> <%= link_to 'My workdays', workdays_path %> </h5>

<table>
<% @departments_managed_by_user.each do |department| %>
  <tr>
    <th><%= department.name %></th>
  </tr>
  <tr>
    <th>Submitter</th>
  </tr>
  <% department.members.each do |user| %>
  <tr>
      <td><%= user.email %></td>
      <% @pending_approval_for_user = Submission.find(:all, :conditions => { :submitter_id => user.id, :approver_id => nil }) %>
      <% @pending_approval_for_user.each do |submission| %>
      <% @submission_period = submission.workdays.first.working_date %>
      <td><%= link_to 'Pending approval', edit_submission_path(submission) %></td>
      <% end %>
  </tr>
  <% end %>
<% end %>
</table>
<br />


<table>
  <tr>
    <th>Submitter</th>
    <th>Period begin</th>
    <th>Period end</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.submitter.email %></td>
    <td><%= submission.period_begin %></td>
    <td><%= submission.period_end %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

