<h1>Listing submissions</h1>
<%= user_email(current_user) %>
<br />
<%= link_to 'My workdays', workdays_path %>
<br />
<%= link_to 'Report', reports_my_submissions_path %>
<br />
<br />

<%= render "user_pending_approvals" %>
<br />
<br />

<%= render "manager_pending_approvals" %>
<br />
<br />


<% unless current_user.departments_managed.empty? %>
<table>
  <tr>
    <th>Submitter</th>
    <th>Period begin</th>
    <th>Period end</th>
    <th>Submitted at</th>
    <th>Approved at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.submitter.email %></td>
    <td><%= submission.period_begin %></td>
    <td><%= submission.period_end %></td>
    <td><%= submission.submitted_at %></td>
    <td><%= submission.approved_at %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Submission', new_submission_path %>

<% end %>
