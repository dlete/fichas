<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :submitter_id %><br />
    <%= f.collection_select :submitter_id, @users,
                            :id, :email,
                            :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :approver_id %><br />
    <%= f.collection_select :approver_id, @users,
                            :id, :email,
                            :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :period_begin %><br />
    <%= f.text_field :period_begin %>
  </div>
  <div class="field">
    <%= f.label :period_end %><br />
    <%= f.text_field :period_end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
