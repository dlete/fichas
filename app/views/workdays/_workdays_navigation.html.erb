<% @submission_status = submission_status(current_user.id, @date.beginning_of_month) %>

<table>
  <tr>
    <td>
      <%= current_user.email %>, <b><%= @workhours_month %> workhours</b> reported for <b><%= h @date.strftime("%B %Y") %></b>, and are <b><%= @submission_status %></b>
    </td>
  </tr>
</table>


<% if @submission_status == "Not Submitted" %>

  <table>
    <tr>
      <td>
        <h4> <%= link_to 'Submissions', submissions_path %> </h4>
      </td>
      <td>
        <h4><%= link_to 'New Workday', new_workday_path %></h4>
      </td>
      <td>
        <h4><%= button_to 'Populate', :action => 'populate', :date_in_gui => @date.strftime("%Y-%m-01") %></h4>
      </td>
      <td>
        <h4><%= button_to 'Wipe', :action => 'wipe', :date_in_gui => @date.strftime("%Y-%m-01") %></h4>
      </td>
      <td>
        <h4><%= button_to 'Submit for approval', submissions_path(:date_in_gui => @date.strftime("%Y-%m-01")) %></h4>
      </td>
    </tr>
  </table>

<% else %>

  <table>
    <tr>
      <td>
        <h4> <%= link_to 'Submissions', submissions_path %> </h4>
      </td>
    </tr>
  </table>

<% end %>
